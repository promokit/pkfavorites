{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
{{ form_start(form, {attr: {id: 'scripts-list'}}) }}
<div class="row justify-content-center pkfavorites">
    <div class="col-xl-10">
        <div class="card">
            <h3 class="card-header">
                <i class="material-icons">edit</i> {{ 'Promokit Favorites Settings'|trans({},
                'Modules.Pkfavorites.Admin') }}
            </h3>

            <div class="card-block row">
                <div class="card-text m-auto w-75">
                    {{ form_widget(form) }}
                </div>
            </div>

            <div class="card-footer">
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary">{{ 'Save'|trans({}, 'Modules.Pkfavorites.Admin') }}</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
{% endblock %}